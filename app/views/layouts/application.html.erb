<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div id="sidebar">
   	<div id="logo">
   		<%= link_to root_path %>
   		<%= image_tag "logo.png" %>
   		
   	</div>
   	<ul>
   		<li class="category">Home</li>
   		<li><%= link_to "Blog", root_path %></li>
   		<li><%= link_to "About", about_path %></li>
   	</ul>
   	
   	<ul>
   		<li class="category">Social</li>
   		<li><a href="http://twitter.com">Twitter</a></li>
   		<li><a href="http://twitter.com">Instagram</a></li>
   		<li><a href="http://twitter.com">Github</a></li>
   		<li><a href="mailto:email@ddavies.co.uk">Email</a></li>
   	</ul>
   	
   	<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
   </div>
   
   <div id="main_content">
   	<div id="header">
   	
   		<% if current_page?(root_path) %>
				<p>All Posts</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>
   		
   		<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
					<button class="button">Log Out</button>
				</div>
   		<% end %>
   	</div>

			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert") %>
			<% end %>

			<%= yield %>
			
		</div><!-- /.main_content -->
  </body>
</html>
